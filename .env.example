# =====================================================
# ENVIRONMENT VARIABLES
# =====================================================
# 
# Copy file này thành `.env` và điền các giá trị thực tế
# File .env sẽ được gitignore (không commit lên Git)

# =====================================================
# BACKEND API CONFIGURATION
# =====================================================

# URL của Backend API (Development)
VITE_API_BASE_URL=http://localhost:8080/api

# URL của Backend API (Production)
# VITE_API_BASE_URL=https://api.evservice.com/api

# =====================================================
# APPLICATION SETTINGS
# =====================================================

# App Name
VITE_APP_NAME="EV Service Center Management"

# App Version
VITE_APP_VERSION=1.0.0

# Environment (development, staging, production)
VITE_APP_ENV=development

# =====================================================
# TIMEOUT & RETRY SETTINGS
# =====================================================

# API Request Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# Max Retry Attempts for Failed Requests
VITE_API_MAX_RETRIES=3

# =====================================================
# FEATURE FLAGS (Optional)
# =====================================================

# Enable Debug Mode
VITE_DEBUG_MODE=true

# Enable Mock Data (for development without backend)
VITE_USE_MOCK_DATA=false

# Enable Service Worker (PWA)
VITE_ENABLE_SERVICE_WORKER=false

# =====================================================
# EXTERNAL SERVICES (Optional)
# =====================================================

# Google Maps API Key (nếu dùng bản đồ)
# VITE_GOOGLE_MAPS_API_KEY=your_api_key_here

# Firebase Config (nếu dùng Firebase)
# VITE_FIREBASE_API_KEY=your_firebase_key
# VITE_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
# VITE_FIREBASE_PROJECT_ID=your-project-id

# =====================================================
# STORAGE KEYS (Optional)
# =====================================================

# LocalStorage Keys
VITE_STORAGE_TOKEN_KEY=accessToken
VITE_STORAGE_USER_KEY=user
VITE_STORAGE_THEME_KEY=theme

# =====================================================
# NOTES
# =====================================================
# 
# - Tất cả biến phải bắt đầu với VITE_ để Vite có thể access
# - Không commit file .env lên Git (đã có trong .gitignore)
# - Sử dụng: import.meta.env.VITE_API_BASE_URL
